<div class="row">
  <div class="col-12">
    <div class="card card-table">
      <div class="card-header">
        <div class="tools">
          <%= link_to '<span class="icon mdi mdi-plus" style="color:#4285f4;"></span>'.html_safe, new_make_path  %>
        </div>
        <div class="title">Makes</div>
      </div>
      <div class="card-body table-responsive">
        <table class="table table-striped table-borderless">
          <thead>
            <tr>
              <th>name</th>
              <th>Model Count</th>
              <th colspan="2"></th>
            </tr>
          </thead>
          <tbody class="no-border-x">
            <tr>
              <% @makes.each do |make| %>
                <tr>
                  <td><%= make.name %></td>
                  <td><%= make.models.count %></td>
                  <td><%= link_to 'Edit', edit_make_path(make) %></td>
                  <td><%= link_to 'Delete', make_path(make), method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
