$("#globalModal").html("<%= escape_javascript(render 'departments/icon_select') %>");
$("#globalModal").modal();


$('a.icon-pick').click(function(e){
  e.preventDefault();
  var id = $(this).data('id');
  var name = $(this).data('name');
  var set = $(this).data('set')
  $("#department_icon_id").val(id);
  if(set == 'ionic')
    $("span.icon-span").html('<ion-icon name="'+name+'" style="font-size:30px;"></ion-icon>('+name+')')
  if(set == 'fontawesome')
    $("span.icon-span").html('<i class="fa '+name+'" style="font-size:30px;"></i>('+name+')')
  $("#globalModal").modal("hide");
});
