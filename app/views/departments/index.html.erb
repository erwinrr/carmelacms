<div class="row">
  <div class="col-12">
    <div class="card card-table">
      <div class="card-header">
        <div class="tools">
          <%= link_to '<span class="icon mdi mdi-plus"></span>'.html_safe, new_organization_group_department_path(@organization, @group)  %>
        </div>
        <div class="title">Departments</div>
      </div>
      <div class="card-body table-responsive">
        <table class="table table-striped table-borderless">
          <thead>
            <tr>
              <th>Name</th>
              <th>Users</th>
              <th></th>
            </tr>
          </thead>
          <tbody class="no-border-x">
            <tr>
              <% @departments.each do |department| %>
                <tr>
                  <td><%= link_to department.name, edit_organization_group_department_path(@organization, @group, department) %></td>
                  <td><%= department.users.count %> users </td>
                  <td><%= link_to 'Delete', organization_group_department_path(@organization, @group, department), method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div> 
