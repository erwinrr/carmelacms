<div class="be-wrapper be-login">
  <div class="be-content">
    <div class="main-content container-fluid">
      <div class="splash-container forgot-password">
        <div class="card card-border-color card-border-color-primary">
          <div class="card-header">
            <%= image_tag("car.png", size: "128x128", class: "logo-img") %>
            <span class="splash-description">Forgot your password?</span>
          </div>
          <div class="card-body">
            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
              <p>Don't worry, we'll send you an email to reset your password.</p>
              <div>
                <%= devise_error_messages! %>
              </div>
              <div class="form-group pt-4">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Your Email", class:"form-control" %>
              </div>
              <p class="pt-1 pb-4">Don't remember your email? <a href="#">Contact Support</a>.</p>
              <div class="form-group pt-1">
                <%= f.submit "Reset Password", class:"btn btn-block btn-primary btn-xl" %>
              </div>
            <% end %>
          </div>
        </div>
        <div class="text-center">
          <%= render "devise/shared/links" %>
        </div>
        <div class="splash-footer">&copy; 2016 Your Company</div>
      </div>
    </div>
  </div>
</div>


