<div class="row">
  <div class="col-12">
    <%= search_form_for @q, url: organization_users_path do |f| %>
      <div class="form-group row">
          <div class="col-3">
            <%= f.label :group_id_eq, "Dealership Filter" %>
            <%= f.collection_select :group_id_eq, @organization.groups, :id, :name, {include_blank: 'All Dealerships'}, { class: 'form-control'} %>
            <%# department dropdown filter that works %>
            <%#= f.label :departments_id_eq, "Department Filter" %>
            <%#= f.collection_select :departments_id_eq, @organization.groups.first.departments, :id, :name, {include_blank: 'NONE PICKED'}, { class: 'form-control'} %>
            <%= f.submit class: 'btn btn-space btn-primary btn-search users-filter' %>
          </div>
      </div>
    <% end %>
  </div>
  <div class="col-12">
    <div class="card card-table">
      <div class="card-header">
        <div class="tools">
        </div>
        <div class="title">Users</div>
      </div>
      <div class="card-body table-responsive">
        <table class="table table-striped table-borderless">
          <thead>
            <tr>
              <th>Name</th>
              <th>Edit</th>
              <th>Deactivate</th>
            </tr>
          </thead>
          <tbody class="no-border-x">
            <tr>
              <% @users.each do |user| %>
                <tr>
                  <td><%= link_to user.full_name, root_path %></td>
                  <td><%= link_to 'Edit', root_path %></td>
                  <td><%= link_to 'Deactivate', root_path, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
