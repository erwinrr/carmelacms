<div class="row">
  <div class="col-12">
    <div class="card card-table">
      <div class="card-header">
        <div class="tools">
          <%#= link_to '<span class="icon mdi mdi-plus" style="color:#4285f4;"></span>'.html_safe, root_path  %>
        </div>
        <div class="title">Models</div>
      </div>
      <div class="card-body table-responsive">
        <table class="table table-striped table-borderless">
          <thead>
            <tr>
              <th>Name</th>
              <th colspan="2"></th>
            </tr>
          </thead>
          <tbody class="no-border-x">
            <tr>
              <% @models.each do |model| %>
                <tr>
                  <td><%= model.name %></td>
                  <td><%= model.make.name %></td>
                  <td>Delete<%#= link_to 'Delete', make_path(make), method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
