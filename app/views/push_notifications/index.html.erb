<div class="row">
  <div class="col-12">
    <div class="card card-table">
      <div class="card-header">
        <div class="tools">
          <%= link_to '<span class="icon mdi mdi-plus" style="color:#4285f4;"></span> Send'.html_safe, new_organization_push_notification_path(@organization)  %>
        </div>
        <div class="title">Push Notifications</div>
      </div>
      <div class="card-body table-responsive">
        <table class="table table-striped table-borderless">
          <thead>
            <tr>
              <th>Sender</th>
              <th>Title</th>
              <th>Message</th>
              <th>Type</th>
              <th>Was Sent</th>
              <th>Time Stamp</th>
            </tr>
          </thead>
          <tbody class="no-border-x">
            <% if @push_notifications.empty? %>
              <tr>
                <td colspan="6">
                  No Results Found
                </td>
              </tr>
            <% end %>
            <% @push_notifications.each do |message| %>
              <tr>
                <td><%= message.sender.full_name %></td>
                <td><%= message.title %></td>
                <td><%= message.message %></td>
                <td><%= message.notification_type %></td>
                <td><%= time_ago_in_words(message.created_at) %></td>
                <td><%= message.created_at.strftime("%m/%d/%Y %I:%M%p") %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
