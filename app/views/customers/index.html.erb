<div class="row">
  <div class="col-12">
    <div class="card card-table">
      <div class="card-header">
        <div class="tools">
        </div>
        <div class="title">Customers</div>
      </div>
      <div class="card-body table-responsive">
        <table class="table table-striped table-borderless">
          <thead>
            <tr>
              <th>Address</th>
              <th colspan="2"></th>
            </tr>
          </thead>
          <tbody class="no-border-x">
            <tr>
              <% @customers.each do |customer| %>
                <tr>
                  <td><%= link_to customer.full_name, root_path %></td>
                  <td><%= link_to 'Edit', edit_organization_customer_path(@organization, customer) %></td>
                  <td><%= link_to 'Destroy', organization_customer_path(@organization, customer), method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
